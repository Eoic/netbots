{{>modal}}

<section class="container container-center">
    <form class='form' method="POST" action="/login">
        <h2 class='form-legend'> LOGIN </h2>

        {{#if errors}}
        <ul class='error-list'>
            {{#each errors as |error|}}
            <li> {{ error }} </li>
            {{/each}}
        </ul>
        {{/if}}

        <input class='input' placeholder='Username' name='username' type='text' required />
        <input class='input' placeholder='Password' name='password' type='password' required />
        <button type='submit' class="btn btn-primary btn-fluid" style="margin-bottom: 10px">
            Login
        </button>
        <a class="styled-link" href="/users/restore-password"> Forgot your password? </a>
    </form>
</section>
