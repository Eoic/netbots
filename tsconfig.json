{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "es2016",
            "dom"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "strict": true,
        "allowJs": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "./out",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}